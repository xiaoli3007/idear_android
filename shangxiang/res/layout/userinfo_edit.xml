<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F3F1F2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/userinfo_layout_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f2ebce"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/userinfo_edit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/login_03" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="资料修改"
            android:textColor="#d0a360"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/userinfo_layout_head"
        android:orientation="vertical" >
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#dfe1e0" >
    </View>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="#F3F1F2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_info_truename_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="姓名："
			android:textColor="@color/text_normal"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/user_info_truename_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_toRightOf="@+id/user_info_truename_text"
            android:hint="请填写真实姓名"
            android:imeOptions="actionNext"
			android:textColor="@color/text_normal"
            android:maxLength="50"
            android:paddingRight="15.0dip"
            android:singleLine="true"
            android:textColorHint="@color/text_hint"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#dfe1e0" >
    </View>
    <RelativeLayout
        android:id="@+id/user_info_sex_relative"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="#F3F1F2" >

        <TextView
            android:id="@+id/user_info_sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="性别："
            android:textColor="@color/text_normal"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/user_info_sex_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_info_sex_text"
            android:text="请输入性别"
            android:textColor="@color/text_normal"
			android:paddingRight="15.0dip"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#dfe1e0" >
    </View>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="#F3F1F2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_info_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="地区："
            android:textColor="@color/text_normal"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/user_info_address_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_toRightOf="@+id/user_info_address_text"
            android:hint="请输入地区"
            android:imeOptions="actionNext"
            android:maxLength="50"
            android:paddingRight="15.0dip"
            android:singleLine="true"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_normal"
            android:layout_centerVertical="true"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#dfe1e0" >
    </View>

        <Button
            android:id="@+id/user_info_submit"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true"
            android:background="@drawable/button_normal"
            android:layout_margin="15dip"
            android:textColor="#ffffff"
            android:text="确认修改" />
 </LinearLayout>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F3F1F2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/order_form_detail_layout_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f2ebce"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/order_form_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/login_03" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="订单详情"
            android:textColor="#d0a360"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_form_detail_layout_ordernumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_form_detail_layout_head"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order_detail_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="订单号：00018"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/order_detail_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dip"
            android:text="李瑞环  祈求平安"
            android:textSize="20.0sp" />
    </LinearLayout>

    <View
        android:id="@+id/order_form_detail_layout_line_1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/order_form_detail_layout_ordernumber"
        android:background="@color/line_highlight" />

    <LinearLayout
        android:id="@+id/order_form_detail_layout_order_baseinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_form_detail_layout_line_1"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/order_baseinfo_simiao_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="寺庙："
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/order_detail_simiao_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/order_baseinfo_simiao_text"
                    android:text="大雷隐私"
                    android:textSize="14.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <TextView
                    android:id="@+id/order_baseinfo_xiangtype_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="香烛："
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/order_detail_xiangtype_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/order_baseinfo_xiangtype_text"
                    android:text="开光香"
                    android:textSize="14.0sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/order_baseinfo_fashi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="法师："
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/order_detail_fashi_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/order_baseinfo_fashi_text"
                    android:text="上善法师"
                    android:textSize="14.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <TextView
                    android:id="@+id/order_baseinfo_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="时间："
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/order_detail_date_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/order_baseinfo_date_text"
                    android:text="2014-12-23"
                    android:textSize="14.0sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/order_form_detail_layout_line_2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/order_form_detail_layout_order_baseinfo"
        android:background="@color/line_highlight" />

    <RelativeLayout
        android:id="@+id/order_form_detail_layout_wishcontent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_form_detail_layout_line_2"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/order_wishcontent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="祈福内容："
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/order_detail_wishcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_wishcontent_text"
            android:text="祝愿世界和平，祝愿所有的人都身体健康，平平安安，万事如意，恭喜发财"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <View
        android:id="@+id/order_form_detail_layout_line_3"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/order_form_detail_layout_wishcontent"
        android:background="@color/line_highlight" />

    <LinearLayout
        android:id="@+id/order_form_detail_layout_dai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_form_detail_layout_line_3"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代上香祈福记录"
            android:textColor="#DEA25A"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_form_detail_layout_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_form_detail_layout_dai"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal" >

        
          <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/show_order_gallery_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/order_form_detail_submit"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_below="@+id/order_form_detail_layout_image"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/button_normal"
        android:text="去支付"
        android:textColor="#ffffff" />

</RelativeLayout>
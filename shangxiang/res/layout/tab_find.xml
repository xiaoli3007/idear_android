<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/daochang_select"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f2ebce"
        android:gravity="center_horizontal" >
			
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
		android:gravity="center_horizontal" > 
      
         <TextView
            android:id="@+id/daochang_select_showname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/foot_03"
			android:text="全部道场"
			android:textSize="16sp"
			android:textColor="@color/color_text_selected"
            />
           
       </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
 
        
           <com.wyj.xlistview.XListView
            android:id="@+id/find_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#cccccccc"
            android:divider="@drawable/list_divider"
            android:dividerHeight="0.5dip" />
           
           
    </LinearLayout>
    

  

</LinearLayout>
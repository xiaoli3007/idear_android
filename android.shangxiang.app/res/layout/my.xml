<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/my_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_normal" >

    <ScrollView
        android:id="@id/my_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/my_title_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:background="@color/background_highlight" >

                <RelativeLayout
                    android:id="@id/my_user_avatar_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10.0dip" >

                    <ImageView
                        android:id="@id/user_avatar"
                        android:layout_width="80.0dip"
                        android:layout_height="80.0dip"
                        android:contentDescription="@string/desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/avatar_null" />

                    <ProgressBar
                        android:id="@+id/user_avatar_loading"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@id/my_user_label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/my_user_avatar_layout"
                    android:text="@string/my_user_need_login"
                    android:textSize="16.0sp" />

                <Button
                    android:id="@id/my_user_next_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignLeft="@id/my_user_label_text"
                    android:background="#00000000" />

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@color/background_highlight"
                android:orientation="horizontal" >

                <Button
                    android:id="@id/my_user_discover_total_toother_button"
                    android:layout_width="fill_parent"
                    android:layout_height="32.0dip"
                    android:layout_marginRight="1.0dip"
                    android:layout_weight="1.0"
                    android:background="#ffefefef"
                    android:text="@string/my_user_discover_total_toother_button" />

                <Button
                    android:id="@id/my_user_discover_total_tome_button"
                    android:layout_width="fill_parent"
                    android:layout_height="32.0dip"
                    android:layout_marginLeft="1.0dip"
                    android:layout_weight="1.0"
                    android:background="#ffefefef"
                    android:text="@string/my_user_discover_total_tome_button" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="15.0dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_menu_order_record_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.0dip"
                    android:text="@string/my_menu_order_record_text"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="15.0dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_menu_notice_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.0dip"
                    android:text="@string/my_menu_notice_text"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_menu_settings_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.0dip"
                    android:text="@string/my_menu_settings_text"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_menu_feedback_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.0dip"
                    android:text="@string/my_menu_feedback_text"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_menu_about_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.0dip"
                    android:text="@string/my_menu_about_text"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <LinearLayout
                android:id="@id/my_menu_logout_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="15.0dip"
                    android:background="@color/line_normal" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@color/background_highlight" >

                    <Button
                        android:id="@id/my_menu_logout_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="15.0dip"
                        android:text="@string/logout"
                        android:textSize="14.0sp" />

                    <ImageButton
                        android:layout_width="30.0dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#00000000"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_normal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/my_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@color/background_navbar" >

        <TextView
            android:id="@id/my_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/my_title_text"
            android:textColor="@color/text_title"
            android:textSize="18.0sp" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/my_info_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_normal" >

    <ScrollView
        android:id="@id/my_info_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/my_info_title_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="15.0dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_info_menu_avatar_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <RelativeLayout
                    android:id="@id/my_info_menu_avatar_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10.0dip" >

                    <ImageView
                        android:id="@id/user_avatar"
                        android:layout_width="60.0dip"
                        android:layout_height="60.0dip"
                        android:contentDescription="@string/desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/avatar_null" />

                    <ProgressBar
                        android:id="@+id/my_info_menu_avatar_loading"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/my_info_menu_avatar_layout"
                    android:text="@string/my_info_menu_head_hint"
                    android:textColor="@color/text_hint"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:id="@id/my_info_menu_avatar_temp_iamge"
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="15.0dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_info_menu_mobile_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:text="@string/my_info_menu_mobile_text"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/my_info_menu_mobile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/text_hint"
                        android:textSize="14.0sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight"
                android:visibility="gone" >

                <Button
                    android:id="@id/my_info_menu_reset_password_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15.0dip"
                    android:text="@string/my_info_menu_reset_password_text"
                    android:textColor="#ff333333"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="15.0dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_info_menu_realname_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:text="@string/my_info_menu_realname_text"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/my_info_menu_realname_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/text_hint"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_info_menu_region_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:text="@string/my_info_menu_region_text"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/my_info_menu_region_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/text_hint"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/my_info_menu_sex_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:text="@string/my_info_menu_sex_text"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/my_info_menu_sex_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/text_hint"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/loading"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_below="@id/my_info_title_layout"
        android:background="#ff333333"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            android:id="@id/progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_centerVertical="true"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/progress_bar"
            android:text="@string/loading"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/my_info_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@color/background_navbar" >

        <TextView
            android:id="@id/my_info_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/my_info_title_text"
            android:textColor="@color/text_title"
            android:textSize="18.0sp" />

        <Button
            android:id="@id/my_info_title_back_button"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawableLeft="@drawable/button_back"
            android:paddingLeft="10.0dip"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/my_info_select_avatar_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#99000000"
        android:clickable="true"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/my_info_select_avatar_cancel_text"
            android:layout_margin="10.0dip"
            android:background="@drawable/form_background"
            android:orientation="vertical" >

            <TextView
                android:id="@id/my_info_select_avatar_title_text"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/my_info_select_avatar_title_text"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <TextView
                android:id="@id/my_info_select_avatar_carema_button"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:clickable="true"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/my_info_select_avatar_carema_button"
                android:textColor="@color/text_blue"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <TextView
                android:id="@id/my_info_select_avatar_thumb_button"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:clickable="true"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/my_info_select_avatar_thumb_button"
                android:textColor="@color/text_blue"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <TextView
                android:id="@id/my_info_select_avatar_show_button"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:clickable="true"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/my_info_select_avatar_show_button"
                android:textColor="@color/text_blue"
                android:textSize="16.0sp" />
        </LinearLayout>

        <TextView
            android:id="@id/my_info_select_avatar_cancel_text"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/form_background"
            android:clickable="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/cancel"
            android:textColor="@color/text_blue"
            android:textSize="16.0sp" />
    </RelativeLayout>

</RelativeLayout>
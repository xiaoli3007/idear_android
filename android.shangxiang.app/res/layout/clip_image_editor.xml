<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/clip_image_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_normal" >

    <ImageView
        android:id="@id/clip_image_editor_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/clip_image_title_layout"
        android:contentDescription="@string/desc"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:id="@id/clip_image_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@color/background_navbar" >

        <TextView
            android:id="@id/clip_image_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/clip_image_title_text"
            android:textColor="@color/text_title"
            android:textSize="18.0sp" />

        <Button
            android:id="@id/clip_image_title_back_button"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawableLeft="@drawable/button_back"
            android:paddingLeft="10.0dip"
            android:text="" />

        <Button
            android:id="@id/clip_image_title_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:text="@string/ok"
            android:textColor="@color/text_title"
            android:textSize="14.0sp" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/user_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_normal" >

    <ScrollView
        android:id="@id/user_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/user_title_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="15.0dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/user_menu_avatar_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <ImageView
                    android:id="@id/user_avatar"
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:contentDescription="@string/desc"
                    android:padding="10.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/avatar_null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/user_avatar"
                    android:text="@string/user_menu_head_hint"
                    android:textColor="@color/text_hint"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:id="@id/user_menu_avatar_temp_iamge"
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="15.0dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/user_menu_mobile_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:text="@string/user_menu_mobile_text"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/user_menu_mobile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/text_hint"
                        android:textSize="14.0sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/user_menu_reset_password_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15.0dip"
                    android:text="@string/user_menu_reset_password_text"
                    android:textColor="#ff333333"
                    android:textSize="14.0sp" />

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="15.0dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/user_menu_realname_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:text="@string/user_menu_realname_text"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/user_menu_realname_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/text_hint"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/user_menu_region_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:text="@string/user_menu_region_text"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/user_menu_region_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/text_hint"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@color/background_highlight" >

                <Button
                    android:id="@id/user_menu_sex_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:text="@string/user_menu_sex_text"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/user_menu_sex_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/text_hint"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/user_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@color/background_navbar" >

        <TextView
            android:id="@id/user_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/user_title_text"
            android:textColor="@color/text_title"
            android:textSize="18.0sp" />

        <Button
            android:id="@id/user_title_back_button"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawableLeft="@drawable/button_back"
            android:paddingLeft="10.0dip"
            android:text="" />

        <Button
            android:id="@id/user_title_logout_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:text="@string/logout"
            android:textColor="@color/text_title"
            android:textSize="14.0sp" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20.0dip" >

    <ImageButton
        android:id="@id/show_discover_listitem_avatar_button"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_marginRight="15.0dip"
        android:background="#00000000"
        android:contentDescription="@string/desc"
        android:scaleType="centerInside"
        android:src="@drawable/avatar_null" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/show_discover_listitem_avatar_button"
        android:orientation="vertical" >

        <TextView
            android:id="@id/show_discover_listitem_name_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textSize="16.0sp" />

        <TextView
            android:id="@id/show_discover_listitem_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/text_gray"
            android:textSize="12.0sp" />
    </LinearLayout>

</RelativeLayout>
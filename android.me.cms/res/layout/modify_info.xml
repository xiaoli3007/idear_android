<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.cms"
    android:id="@id/modify_info_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_normal" >

    <ScrollView
        android:id="@id/modify_info_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/modify_info_title_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@id/modify_info_form_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="15.0dip"
                        android:text="@string/modify_info_realname_text"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@id/modify_info_realname_input"
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:background="#00000000"
                        android:hint="@string/modify_info_realname_hint"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="50"
                        android:paddingRight="15.0dip"
                        android:singleLine="true"
                        android:textColorHint="@color/text_hint"
                        android:textSize="16.0sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_normal" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@id/modify_info_region_title"
                        android:layout_width="wrap_content"
                        android:layout_height="44.0dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="15.0dip"
                        android:text="@string/modify_info_region_text"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@id/modify_info_region_input"
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/modify_info_region_title"
                        android:background="#00000000"
                        android:hint="@string/modify_info_region_hint"
                        android:paddingRight="15.0dip"
                        android:textColorHint="@color/text_hint"
                        android:textSize="16.0sp" />

                    <Button
                        android:id="@id/modify_info_region_button"
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:layout_alignBottom="@id/modify_info_region_input"
                        android:layout_alignTop="@id/modify_info_region_input"
                        android:background="#00000000" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_normal" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@id/modify_info_sex_title"
                        android:layout_width="wrap_content"
                        android:layout_height="44.0dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="15.0dip"
                        android:text="@string/modify_info_sex_text"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@id/modify_info_sex_input"
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/modify_info_sex_title"
                        android:background="#00000000"
                        android:hint="@string/modify_info_sex_hint"
                        android:paddingRight="15.0dip"
                        android:textColorHint="@color/text_hint"
                        android:textSize="16.0sp" />

                    <Button
                        android:id="@id/modify_info_sex_button"
                        android:layout_width="fill_parent"
                        android:layout_height="44.0dip"
                        android:layout_alignBottom="@id/modify_info_sex_input"
                        android:layout_alignTop="@id/modify_info_sex_input"
                        android:background="#00000000" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_normal" />

                <Button
                    android:id="@id/modify_info_submit_button"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:layout_margin="20.0dip"
                    android:background="@drawable/button_normal"
                    android:text="@string/modify_info_submit_button"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/modify_info_success_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="20.0dip"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@id/modify_info_failure_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="20.0dip"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/loading"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_below="@id/modify_info_title_layout"
        android:background="#cc333333"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            android:id="@id/progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_centerVertical="true"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/progress_bar"
            android:text="@string/loading"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/modify_info_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@color/background_navbar" >

        <TextView
            android:id="@id/modify_info_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/modify_info_title_text"
            android:textColor="@color/text_title"
            android:textSize="18.0sp" />

        <Button
            android:id="@id/modify_info_title_back_button"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawableLeft="@drawable/button_back"
            android:paddingLeft="10.0dip"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/modify_info_select_sex_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#99000000"
        android:clickable="true"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/modify_info_select_sex_cancel_text"
            android:layout_margin="10.0dip"
            android:background="@drawable/form_background"
            android:orientation="vertical" >

            <TextView
                android:id="@id/modify_info_select_sex_title_text"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/modify_info_sex_select_title_text"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <TextView
                android:id="@id/modify_info_select_sex_male_text"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:clickable="true"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/sex_male"
                android:textColor="@color/text_blue"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_normal" />

            <TextView
                android:id="@id/modify_info_select_sex_female_text"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:clickable="true"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/sex_female"
                android:textColor="@color/text_blue"
                android:textSize="16.0sp" />
        </LinearLayout>

        <TextView
            android:id="@id/modify_info_select_sex_cancel_text"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/form_background"
            android:clickable="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/cancel"
            android:textColor="@color/text_blue"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/modify_info_select_region_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#99000000"
        android:clickable="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/line_normal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_normal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="@string/modify_info_region_hint"
                android:textSize="16.0sp" />

            <Button
                android:id="@id/modify_info_select_region_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:paddingLeft="10.0dip"
                android:text="@string/cancel"
                android:textSize="14.0sp" />

            <Button
                android:id="@id/modify_info_select_region_ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:paddingRight="10.0dip"
                android:text="@string/ok"
                android:textSize="14.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/line_normal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_normal"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <com.shangxiang.android.spinnerwheel.WheelVerticalView
                android:id="@id/modify_info_select_region_prov_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:selectionDivider="@color/line_normal"
                app:selectionDividerActiveAlpha="100"
                app:selectionDividerDimmedAlpha="255"
                app:selectionDividerHeight="1.0dip"
                app:visibleItems="5" />

            <com.shangxiang.android.spinnerwheel.WheelVerticalView
                android:id="@id/modify_info_select_region_city_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:selectionDivider="@color/line_normal"
                app:selectionDividerActiveAlpha="100"
                app:selectionDividerDimmedAlpha="255"
                app:selectionDividerHeight="1.0dip"
                app:visibleItems="5" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.cms"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_normal" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:clickable="true"
        android:background="@color/background_normal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="选择时间"
            android:textSize="24.0sp" />

        <Button
            android:id="@+id/orderform_date_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:paddingRight="10.0dip"
            android:text="@string/ok"
            android:textSize="24.0sp" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_normal"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <com.example.spinnerwheel.WheelVerticalView
            android:id="@+id/orderform_date_year_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:selectionDivider="@color/line_normal"
            app:selectionDividerActiveAlpha="100"
            app:selectionDividerDimmedAlpha="255"
            app:selectionDividerHeight="1.0dip"
            app:visibleItems="5" />

        <com.example.spinnerwheel.WheelVerticalView
            android:id="@+id/orderform_date_month_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:selectionDivider="@color/line_normal"
            app:selectionDividerActiveAlpha="100"
            app:selectionDividerDimmedAlpha="255"
            app:selectionDividerHeight="1.0dip"
            app:visibleItems="5" />

        <com.example.spinnerwheel.WheelVerticalView
            android:id="@+id/orderform_date_day_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:selectionDivider="@color/line_normal"
            app:selectionDividerActiveAlpha="100"
            app:selectionDividerDimmedAlpha="255"
            app:selectionDividerHeight="1.0dip"
            app:visibleItems="5" />
    </LinearLayout>

</LinearLayout>